---
import { Icon } from "astro-icon";
const { title, icon, desc } = Astro.props;
---

<header class="flex flex-col gap-3 items-center mb-8">
	{icon && <Icon name={icon} class="w-8 text-primary-400" />}
	<h4
		class="text-3xl font-bold leading-tight tracking-tight text-slate-900 sm:text-4xl text-center"
	>
		{title}
	</h4>

	{
		desc && (
			<>
				<p class="max-w-[400px] text-slate-500 text-l" style="text-wrap: balance">{desc}</p>
			</>
		)
	}
</header>
