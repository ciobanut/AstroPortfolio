---
const { frontmatter } = Astro.props

import BaseLayout from './Base/BaseLayout.astro'
import ArticleWrapper from './ArticleWrapper.astro'
import CardArticle from '../components/CardArticle.astro'
import CallToAction from '../components/HomePageSections/CallToAction.astro'
import IconList from '../components/IconList.astro'

---



<BaseLayout pageTitle={frontmatter.title} >
	<ArticleWrapper>
		<h1
			class="text-3xl font-bold leading-tight tracking-tight text-slate-900 sm:text-4xl"
		>
			{frontmatter.title}
		</h1>
		<p class="text-md font-normal leading-relaxed text-slate-500 sm:text-lg">
			{frontmatter.description}
		</p>
		<img
			src={frontmatter.image.src}
			width="820"
			alt={frontmatter.image.alt || ' '}
			class="aspect-video w-full rounded-2xl object-cover"
		/>

		<div
			class="flex w-full gap-10 rounded-xl border border-black px-4 py-4 md:w-10/12 md:gap-20 md:px-8 md:py-10"
		>
			<h2 class="text-5xl font-thin">50K</h2>
			<p>
				We're proud to announce that we now employ a workforce of over <strong>50,000</strong>. It's
				all possible because of you.
			</p>
		</div>

		<section class="grid grid-cols-12 grid-rows-2 gap-4">
			<CardArticle classNames="items-center col-span-12 sm:col-span-4 row-span-2">
				<h4 class="text-2xl font-semibold tracking-tight text-slate-900">
					{frontmatter.client}
				</h4>
				<p class="text-md font-normal text-slate-500">Client</p>
			</CardArticle>
			<CardArticle classNames="col-span-4">
				<h4 class="text-2xl font-semibold tracking-tight text-slate-900">
					{frontmatter.year}
				</h4>
				<p class="text-md font-normal text-slate-500">Year</p>
			</CardArticle>
			<CardArticle classNames="col-span-4">
				<h4 class="text-2xl font-semibold tracking-tight text-slate-900">
					{frontmatter.deadline}
				</h4>
				<p class="text-md font-normal text-slate-500">Deadline</p>
			</CardArticle>

			<CardArticle classNames="col-span-4">
				<div class="flex gap-2">
					<IconList stacks={frontmatter.stacks} />
				</div>

				<p class="text-md font-normal text-slate-500">Stack</p>
			</CardArticle>
			<CardArticle classNames="col-span-4">
				<div class="flex gap-2">
					<IconList stacks={frontmatter.languages} />
				</div>

				<p class="text-md font-normal text-slate-500">Languages</p>
			</CardArticle>
		</section>

		<div class="prose md:prose-xl">
			<h3>Project description</h3>
			<slot />
		</div>
	</ArticleWrapper>
	<CallToAction />
</BaseLayout>