---
import BaseLayout from "@layouts/Base/BaseLayout.astro";
import Header from "@components/Section/Header.astro";
import ContactForm from "@components/Form/ContactForm.astro";

const pageTitle = "Contact";
---

<BaseLayout pageTitle={pageTitle}>
  <section>
    <Header
      title="Let's Get in Touch!"
      icon="ph:chat-centered-text"
      desc="Wanna Work Together? I'm just a button click away, I'll be happy to help you with your Website Development!"
    />


	<div class=" text-gray-900 flex justify-between my-12">
		<div class="flex flex-col">
			<dt class="mb-1 text-gray-500 md:text-l dark:text-gray-400">Email</dt>
			<dd class="font-semibold">iofesty@gmail.com</dd>
		</div>
		<div class="flex flex-col">
			<dt class="mb-1 text-gray-500 md:text-l dark:text-gray-400">Address</dt>
			<dd class="font-semibold">s.Frumoasa, Calarasi, Moldova</dd>
		</div>
		<div class="flex flex-col">
			<dt class="mb-1 text-gray-500 md:text-l dark:text-gray-400">Phone number</dt>
			<dd class="font-semibold">+373 611 89 770</dd>
		</div>
	</div>

    <ContactForm />


  </section>
</BaseLayout>
